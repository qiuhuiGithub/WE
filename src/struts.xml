<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="userAction" namespace="/" extends="struts-default">
	<action name="regist" class="userAction.RegistAction" method="execute">
	<result name="success">/registsuccess.jsp</result>
	<result name="error">/registerror.jsp</result>
	</action>
	
	<action name="login" class="userAction.LoginAction" method="execute">
	<result name="success">/main.jsp</result>
	<result name="error">/error.jsp</result>
	</action>
	<action name="info" class="userAction.UserinfoAction" method="execute">
	<result name="success">/userinfo.jsp</result>
	<result name="error">/infoerror.jsp</result>
	</action>
	</package>
	
	<package name="equipAction" namespace="/" extends="struts-default">
	<action name="query" class="equipAction.EquipQueryAction" method="execute">
	<result name="success">/equipment/equipment.jsp</result>
	<result name="error">/equipment/queryerror.jsp</result>
	</action>
	
	<action name="query1" class="equipAction.EquipQuery1Action" method="execute">
	<result name="success">/equipment/equipmentbyuser.jsp</result>
	<result name="error">/equipment/usererror.jsp</result>
	</action>
	
	
	<action name="delete" class="equipAction.EquipDeleteAction" method="execute">
	<result name="success">/equipment/equipdelete.jsp</result>
	<result name="error">/equipment/deleteerror.jsp</result>
	</action>
	
	<action name="add" class="equipAction.EquipAddAction" method="execute">
	<result name="success">/equipment/addsuccess.jsp</result>
	<result name="error">/equipment/adderror.jsp</result>
	</action>
	<action name="list" class="equipAction.EquipListAction" method="execute">
	<result name="success">/equipment/equiplist.jsp</result>
	<result name="error">/equipment/listerror.jsp</result>
	</action>
	
	<action name="edit" class="equipAction.EquipEditAction" method="execute">
	<result name="success">/equipment/editsuccess.jsp</result>
	<result name="error">/equipment/editerror.jsp</result>	
	</action>
	
	<action name="select" class="equipAction.EquipSelectAction" method="execute">
	<result name="success">/equipment/equipedit.jsp</result>
	<result name="error">/equipment/editerror.jsp</result>
	</action>
	
	<action name="borrow" class="equipAction.EquipBorrowAction" method="execute">
	<result name="success">/equipment/borrowsuccess.jsp</result>
	<result name="error">/equipment/borrowerror.jsp</result>
	</action>
	</package>
</struts>    
